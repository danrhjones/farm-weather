{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "jsx": "react",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "src/types/*"
      ]
    },
    "lib": [
      "DOM",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ESNext.bigint"
    ],
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
